{
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "/usr/bin/clang++",
			"args": [
				"${workspaceFolder}/src/sample.cpp",
				"-lLLVM-15",
				"-L/usr/include/llvm-15",
				"-L/usr/include/llvm-c-15",
				"-I/usr/lib/llvm-15/include",
				"-I/usr/lib/llvm-c-15/include",
				"-I/usr/local/include/antlr4-runtime",
				"-g",
				"-o",
				"${fileDirname}/a.out"
			],
			"options": {
				"cwd": "${fileDirname}",
				"env": {
					"CXXFLAGS": "$(llvm-config-15 --cxxflags)"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}